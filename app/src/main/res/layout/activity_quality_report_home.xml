<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@android:color/holo_blue_dark">


    <TextView
        android:layout_width="match_parent"
        android:text="Nero"
        android:textSize="40sp"
        android:layout_marginTop="60sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/email_text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Quality Reports"
        android:textColor="@android:color/white"
        android:layout_marginTop="80sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@android:color/white"
        android:text="View Quality Reports"
        android:id="@+id/viewQualityReports" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@android:color/white"
        android:text="Submit Quality Report"
        android:id="@+id/submitQualityReport" />
</LinearLayout>