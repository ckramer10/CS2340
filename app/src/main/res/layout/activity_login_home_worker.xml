<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@android:color/holo_blue_dark"
    android:weightSum="1">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="290dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_blue_dark"
        android:src="@mipmap/ic_action_settings"
        android:id="@+id/settings" />

    <ImageView
        android:layout_width="152dp"
        android:src="@mipmap/ic_logo"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="0.29" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/email_text"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="View Water Sources (Map)"
        android:id="@+id/viewwsourcesmap" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/white"
        android:layout_marginRight="15dp"
        android:text="View Water Sources (List)"
        android:id="@+id/viewwsourceslist" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/white"
        android:layout_marginRight="15dp"
        android:text="Submit Water Report"
        android:id="@+id/submitreport"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:text="Quality Reports"
        android:id="@+id/viewQualityReports"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:text="View Historical Reports"
        android:id="@+id/viewHistoricalReports"
        android:layout_height="wrap_content" />




</LinearLayout>
