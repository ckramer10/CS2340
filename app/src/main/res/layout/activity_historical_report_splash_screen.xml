<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@android:color/holo_blue_dark">

    <TextView
        android:layout_width="match_parent"
        android:text="Nero"
        android:textSize="40dp"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Historical Reports"
        android:textAlignment="center"
        android:layout_marginTop="240px"
        android:textSize="30dp"
        android:textColor="@android:color/white"/>


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/sqr_text"
        android:textSize="20dp"
        android:text="Choose Location From:"
        android:textColor="@android:color/white"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:text="Map"
        android:id="@+id/map_option" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:text="List"
        android:id="@+id/list_option" />

</LinearLayout>